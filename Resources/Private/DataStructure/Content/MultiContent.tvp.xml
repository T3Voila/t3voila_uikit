<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta type="array">
        <title>Multicontent like Accordeon/Tabs</title>
        <description>Place a description here</description>
    </meta>
    <ROOT type="array">
        <el type="array">
            <field_sections type="array">
                <type>array</type>
                <el type="array">
                    <field_section type="array">
                        <type>array</type>
                        <el type="array">
                            <field_name type="array">
                                <TCEforms type="array">
                                    <label>Section Name</label>
                                    <config type="array">
                                        <type>input</type>
                                        <size>48</size>
                                        <eval>trim</eval>
                                    </config>
                                </TCEforms>
                            </field_name>
                            <field_content type="array">
                                <TCEforms type="array">
                                    <label>Contentelements</label>
                                    <config type="array">
                                        <type>group</type>
                                        <internal_type>db</internal_type>
                                        <allowed>tt_content</allowed>
                                        <size>5</size>
                                        <maxitems>200</maxitems>
                                        <minitems>0</minitems>
                                        <multiple>1</multiple>
                                    </config>
                                </TCEforms>
                            </field_content>
                        </el>
                        <title>One Section</title>
                    </field_section>
                </el>
                <section>1</section>
                <title>Multiple Sections</title>
            </field_sections>
        </el>
    </ROOT>
</T3DataStructure>
